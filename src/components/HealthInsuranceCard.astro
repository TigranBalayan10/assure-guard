---
import { getCollection } from "astro:content";

const healthInsurance = await getCollection("health-insurance", ({id}) => {
    return id.startsWith("covered-california") || id.startsWith("private-insurance");
});

---

{
  healthInsurance.map((health) => (
    <div class="card bg-base-100 w-full shadow-xl">
      <div class="card-body items-center text-center">
        <figure class="px-10 pt-10 w-full h-64 flex items-center justify-center mb-5">
          <img
            src={health.data.image}
            alt={health.data.title}
            class="rounded-xl object-contain w-full h-full"
          />
        </figure>
        <h2 class="card-title">{health.data.title}</h2>
        <p class="mb-4">{health.data.description}</p>
        <div class="card-actions mt-6">
          <a href={`/health-insurance/${health.slug}`} class="btn btn-primary btn-wide">
            Learn More
          </a>
        </div>
      </div>
    </div>
  ))
}
