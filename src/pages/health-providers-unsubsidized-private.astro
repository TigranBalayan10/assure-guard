---
import Layout from "../layouts/Layout.astro";
import HealthProvidersCard from "../components/HealthProvidersCard.astro";
import { getCollection } from "astro:content";

const healthProvidersPrivate = await getCollection("health-providers",({ id }) => {
      return id.startsWith("blue-cross.md") || id.startsWith("blue-shield.md") || id.startsWith("kaiser.md") || id.startsWith("health-net.md")
});
---

<Layout>
  <h1 class="text-center text-4xl font-bold mt-8">Health Providers</h1>
  <p class="text-center text-lg mt-4">
    Find the best health providers in your area.
  </p>
  <div class="flex justify-center gap-8 max-sm:flex-col m-8">
    <HealthProvidersCard healthProviders={healthProvidersPrivate} />
  </div>
</Layout>
