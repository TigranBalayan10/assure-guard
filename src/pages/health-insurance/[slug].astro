---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import HealthInsuranceCard from "../../components/HealthInsuranceCard.astro";
// 1. Generate a new path for every collection entry
export async function getStaticPaths() {
  const healthInsurance = await getCollection("health-insurance", ({ id }) => {
    return (
      id.startsWith("covered-california") || id.startsWith("private-insurance")
    );
  });
  return healthInsurance.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}
// 2. For your template, you can get the entry directly from the prop
const { entry } = Astro.props;
const { Content } = await entry.render();
---

<Layout>
  <div class="prose prose-lg overflow-visible p-14 mx-auto max-w-6xl">
    <Content />
    <div class="mt-12 text-center">
      <a href="/health-insurance/providers" class="btn no-underline btn-block">
        Find a Provider
      </a>
    </div>
  </div>
</Layout>
